{
  "uid": "gateway-apm",
  "title": "Gateway APM",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "row",
      "title": "ðŸš¦ Gateway Traffic Overview",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 }
    },
    {
      "type": "timeseries",
      "title": "Requests per Second by Method & Route",
      "gridPos": { "x": 0, "y": 1, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_count[1m])",
          "legendFormat": "{{method}} {{route}}",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Average Latency per Method/Route/Status",
      "gridPos": { "x": 12, "y": 1, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "http_request_duration_seconds_sum / http_request_duration_seconds_count",
          "legendFormat": "{{method}} {{route}} {{status}}",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Errors 4xx/5xx",
      "gridPos": { "x": 0, "y": 7, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count{status=~\"4..|5..\"}[5m])) by (status)",
          "legendFormat": "Status {{status}}",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency Histogram (Buckets)",
      "gridPos": { "x": 12, "y": 7, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_bucket[1m])",
          "legendFormat": "{{method}} {{route}} le={{le}}",
          "datasource": { "type": "prometheus", "uid": "prometheus" }
        }
      ]
    },
    {
      "type": "row",
      "title": "ðŸ’» Process & Node.js Metrics",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 1 }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "gridPos": { "x": 0, "y": 13, "w": 12, "h": 4 },
      "targets": [
        { "expr": "rate(process_cpu_user_seconds_total[1m])", "legendFormat": "User CPU", "datasource": { "type": "prometheus", "uid": "prometheus" } },
        { "expr": "rate(process_cpu_system_seconds_total[1m])", "legendFormat": "System CPU", "datasource": { "type": "prometheus", "uid": "prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage",
      "gridPos": { "x": 12, "y": 13, "w": 12, "h": 4 },
      "targets": [
        { "expr": "process_resident_memory_bytes / 1024 / 1024", "legendFormat": "Resident MB", "datasource": { "type": "prometheus", "uid": "prometheus" } },
        { "expr": "process_virtual_memory_bytes / 1024 / 1024", "legendFormat": "Virtual MB", "datasource": { "type": "prometheus", "uid": "prometheus" } },
        { "expr": "process_heap_bytes / 1024 / 1024", "legendFormat": "Heap MB", "datasource": { "type": "prometheus", "uid": "prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Event Loop Lag",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 4 },
      "targets": [
        { "expr": "nodejs_eventloop_lag_seconds", "legendFormat": "Current", "datasource": { "type": "prometheus", "uid": "prometheus" } },
        { "expr": "nodejs_eventloop_lag_p90_seconds", "legendFormat": "p90", "datasource": { "type": "prometheus", "uid": "prometheus" } },
        { "expr": "nodejs_eventloop_lag_p99_seconds", "legendFormat": "p99", "datasource": { "type": "prometheus", "uid": "prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Handles & Resources",
      "gridPos": { "x": 12, "y": 18, "w": 12, "h": 4 },
      "targets": [
        { "expr": "nodejs_active_handles_total", "legendFormat": "Handles", "datasource": { "type": "prometheus", "uid": "prometheus" } },
        { "expr": "nodejs_active_resources_total", "legendFormat": "Resources", "datasource": { "type": "prometheus", "uid": "prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Heap Usage & GC",
      "gridPos": { "x": 0, "y": 23, "w": 24, "h": 6 },
      "targets": [
        { "expr": "nodejs_heap_size_used_bytes / 1024 / 1024", "legendFormat": "Heap Used MB", "datasource": { "type": "prometheus", "uid": "prometheus" } },
        { "expr": "nodejs_heap_size_total_bytes / 1024 / 1024", "legendFormat": "Heap Total MB", "datasource": { "type": "prometheus", "uid": "prometheus" } },
        { "expr": "rate(nodejs_gc_duration_seconds_sum[1m])", "legendFormat": "GC Duration s", "datasource": { "type": "prometheus", "uid": "prometheus" } }
      ]
    }
  ]
}
